{
  "version": "0.8.12",
  "name": "laf-docs",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "dev": "vitepress dev",
    "build": "vitepress build && npm run after-build",
    "serve": "vitepress serve",
    "after-build": "sed -i -e \"s@</body>@<div style='font-size: 14px; padding-bottom: 30px; color: darkblue;text-align: center;'><a href='https://beian.miit.gov.cn/' target='_blank'>皖ICP备20008280号-2</a></div></body>@g\" ./.vitepress/dist/index.html",
    "docs:deploy": "npm run build && sh ./deploy.sh",
    "docker-build": "docker build --platform linux/amd64 -t lafyun/docs:latest ."
  },
  "dependencies": {
    "vitepress": "^1.0.0-alpha.4"
  }
}
